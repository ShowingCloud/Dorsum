doctype html
html(lang='en')
  include ../data/videodata.pug
  head
    meta(charset='UTF-8')
    title 猛犸学院
    meta(name='viewport', content='initial-scale=1,maximum-scale=1, minimum-scale=1')
    link(rel='stylesheet', href='/stylesheets/reset.css')
    link(rel='stylesheet', href='/stylesheets/playlist.css')
    link(rel='stylesheet', type='text/css', media='screen and (max-width:1280px)', href='/stylesheets/videoList/1280videoList.css')
    link(rel='stylesheet', type='text/css', media='screen and (min-width:1366px)', href='/stylesheets/videoList/1366videoList.css')
    link(rel='stylesheet', type='text/css', media='screen and (min-width:1440px)', href='/stylesheets/videoList/1440videoList.css')
    link(rel='stylesheet', type='text/css', media='screen and (min-width:1680px)', href='/stylesheets/videoList/1680videoList.css')
    link(rel='stylesheet', type='text/css', media='screen and (min-width:1920px)', href='/stylesheets/videoList/1920videoList.css')
    link(rel='stylesheet', type='text/css', media='screen and (max-width:540px)', href='/stylesheets/videoList/mobile.css')
    script(src='/javascripts/jquery-3.2.1.min.js')
  body
    .container
      // 导航栏
      .navBox
        // <img src="/images/blur_bar.png" alt="" class="blur_bar">
        // <img src="/images/black_bar.png" alt="" class="black_bar">
        .balckBg
          a(href='/')
            img.logo(src='/images/logo.png', alt='')
            img(src='/images/logo1.png', style='display: none;')
          .lesson_tools
            a(href='/video')
              .lesson_tip.fl
                img.fl.onlineLesson(src='/images/lesson.png', alt='')
                span.fl 在线课程
            .shortLine.fl
            a(href='/', target='_blank')
              .tool_tip.fr
                img.fl.onlineTool(src='/images/tool_03.png', alt='')
                span.fl 编程工具
          .log_reg_box
            a(href='') 登陆
            a(href='') 注册
      .yellowBar
      .main
        .right_video_box.fr
          .sm_video_lists
            if videodata.season[params.season - 1]
              - var season = videodata.season[params.season - 1]
            else
              - var season = videodata.season[0]
            span.videoName #{season.name}
            .sm_video_box
              each episode, index in season.episode
                if index == 0
                  <div class="video_row_1 clear">
                else if index == 3
                  <div class="video_row_2 clear">
                a(href='/video/' + season.id + '/episode/' + episode.id)
                  .videos.fl
                    .playBox
                      img(src='/images/thumbnails/' + episode.image + '.jpg', alt='', width='100%', height='100%')
                    span.the_video_name #{episode.name}
                if index == 2
                  </div>
              </div>
            span.prevPage.dis <<&nbsp;上一页
            span.nextPage.dis <<&nbsp;下一页
        ul.videoLists.fl
          li.list_title.fl 课程列表
          li.list_title_box.fl
            each season in videodata.season
              span.little_title.little_title_active.little_title1 #{season.name}
      .footer
      script(src='/javascripts/main.js')
